<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:background="@drawable/bg"
    tools:context=".activites.ForgotPasswordActivity">

<ImageView
android:id="@+id/imgForgotPassword"
android:layout_width="150dp"
android:layout_height="150dp"
android:src="@drawable/logo1"
android:contentDescription="Forgot Password Icon"
app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="60dp"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="217dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:text="Khôi phục mật khẩu"
        android:textColor="#4A0D54"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgForgotPassword" />

    <EditText
        android:id="@+id/etEmailForgot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:hint="Nhập email của bạn"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/btnSendReset"
        android:layout_width="366dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/purple"
        android:text="Gửi yêu cầu"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmailForgot" />

    <Button
        android:id="@+id/btnBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:backgroundTint="@android:color/transparent"
        android:text="← Quay lại đăng nhập"
        android:textAllCaps="false"
        android:textColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendReset" />

</androidx.constraintlayout.widget.ConstraintLayout>
